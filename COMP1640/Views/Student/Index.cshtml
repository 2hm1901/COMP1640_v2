@{
    Layout = "_LayoutStudent";
}

<h2>Welcome, Student!</h2>
<p>Your dashboard shows conversations, notifications, and meetings.</p>

<style>
    .student-home .card {
        background-color: #ffffff;
        transition: box-shadow 0.3s ease;
    }

        .student-home .card:hover {
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1); /* Hover shadow */
        }

    .student-home ul li, .student-home ol li {
        color: #34495e;
    }

    .student-home .btn-primary {
        background-color: #3498db;
        border-color: #3498db;
        transition: all 0.3s ease;
    }

        .student-home .btn-primary:hover {
            background-color: #2980b9;
            border-color: #2980b9;
        }

    .student-home .btn-outline-primary {
        border-color: #3498db;
        color: #3498db;
        transition: all 0.3s ease;
    }

        .student-home .btn-outline-primary:hover {
            background-color: #3498db;
            color: #ffffff;
        }

    .student-home i {
        color: #3498db; /* Icon color */
    }
</style>